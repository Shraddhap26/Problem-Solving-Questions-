Program:

#include <iostream>
using namespace std;
int fact(int n)
{int val=1;
    for(int i=n;i>=1;i--){
        val*=i;
        
    }
    return val;
}
int main() {
    // Write C++ code here
    int n;
    cout<<"Enter Interger:";
    cin>>n;
    int val=0;
    for(int i=n-1;i>=1;i--){
        val=fact(i);
        cout<<val<<endl;
        if(val%n==1){
           cout<<i;
           break;
        }
        
    }
    

    return 0;
}


