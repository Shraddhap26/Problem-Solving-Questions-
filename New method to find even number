//Find the given number is even or odd 
#include <iostream>
using namespace std;
bool iseven(int num){
    if(num&1){
        return 0;
    }
    else return 1;
}
int main() {
    int n1;
    cout<<"Enter Number:";
    cin>>n1;
    if(iseven(n1)){
        cout<<"Even number";
    }else{
        cout<<"odd number";
    }
     return 0;
}

Output:
Enter Number:47
odd number
