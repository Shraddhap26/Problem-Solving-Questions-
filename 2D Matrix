//Program of 2D matrix
#include <iostream>
using namespace std;
int main() {
   int mat[3][3];
   cout<<"\nEnter matrix element:";
   for(int i=0;i<3;i++){
       for(int j=0;j<3;j++){
       cin>>mat[i][j]; 
   }
   cout<<endl;
   }
   cout<<"\nMatrix elements are:";
   for(int i=0;i<3;i++){
       for(int j=0;j<3;j++){
       cout<<mat[i][j]<<" ";
   }
   }
   
   cout<<"\nRow wise sum:";
   for(int i=0;i<3;i++){
       int sum=0;
       for(int j=0;j<3;j++){
       sum+=mat[i][j];
   }
   cout<<sum<<" ";
   }
   
   cout<<"\nCloumn wise sum:";
   for(int i=0;i<3;i++){
       int sum=0;
       for(int j=0;j<3;j++){
       sum+=mat[j][i];   //just swap the i and j
   }
   cout<<sum<<" ";
   }
   
  return 0;
}

//Output :

Enter matrix element:
1 2 3
4 5 6
7 8 9
Matrix elements are:1 2 3 4 5 6 7 8 9 
Row wise sum:6 15 24 
Cloumn wise sum:12 15 18 
