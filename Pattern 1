//Print the following pattern

1
2 3 
3 4 5 
4 5 6 7

Program :
-----------Method 1------------

#include <iostream>
using namespace std;
int main() {
   int num=1;
   for(int i=1;i<=4;i++){
       num=i;
       for(int j=1;j<=i;j++){
           
           cout<<num<<" ";
           num++;
       }
       cout<<"\n";
   }
    return 0;
}

-----------Method 2------------
(without using num)
#include <iostream>
using namespace std;
int main() {
 
   for(int i=0;i<=3;i++){
       
       for(int j=0;j<=i;j++){
           
           cout<<i+j+1<<" ";
           
           
       }
       cout<<"\n";
   }
    return 0;
}



___________________________________________________________________________________________
2nd pattern:
1 
2 1 
3 2 1 
4 3 2 1 

Program :
#include <iostream>
using namespace std;
int main() {
 
   for(int i=0;i<=3;i++){
       
       for(int j=0;j<=i;j++){
           
           cout<<i-j+1<<" ";
           
           
       }
       cout<<"\n";
   }
    return 0;

