#include <iostream>
using namespace std;
void reverse(int i,int j, string& str){
    if(i>j){
        return;
    }
swap(str[i],str[j]);
i++;
j--;
reverse(i,j,str);
    
}

int main() {
    // Write C++ code here
    
    string str="Hello world";
    reverse(0,str.length()-1,str);
    cout<<str;
    

    return 0;
}

Output :
dlrow olleH
