//Program
#include <iostream>
using namespace std;
int main() {
    cout<<"Enter number of rows:";
    int n;
    cin>>n;
    int num=0;
   
for(int i=0;i<n;i++){
    for(int j=0;j<=i;j++){
         char ch='A'+i+j;
        cout<<ch<<" ";
       
    }
    cout<<"\n";
}
    return 0;
}
