//Program
#include <iostream>
using namespace std;
int main() {
    cout<<"Enter number of rows:";
    int n;
    cin>>n;
    char start='A';
for(int i=1;i<=n;i++){
    for(int j=1;j<=n;j++){
        char ch='A'+i+j-2;
        cout<<ch<<" ";
        
    }
    cout<<"\n";
}
    return 0;
}

