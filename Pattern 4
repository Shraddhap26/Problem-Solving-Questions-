//Output
Enter number of rows:6
D 
C D 
B C D 
A B C D 
@ A B C D 
? @ A B C D 

//Program -Method 1
#include <iostream>
using namespace std;
int main() {
    cout<<"Enter number of rows:";
    int n;
    cin>>n;
    int num=0;
  
for(int i=1;i<=n;i++){
  
    for(int j=1;j<=i;j++){
         char ch='D'-i+j;
        cout<<ch<<" "; 
    }
    cout<<"\n";
}
    return 0;
}

------------------------------------------------------------
Method - 2
#include <iostream>
using namespace std;
int main() {
    cout<<"Enter number of rows:";
    int n;
    cin>>n;
    int num=0;
  
for(int i=1;i<=n;i++){
  char ch='A'+n-i;
    for(int j=1;j<=i;j++){
         
        cout<<ch<<" ";
        ch=ch+1;
       
    }
    cout<<"\n";
}
    return 0;
}
