//Output
Enter number of rows:6
D 
C D 
B C D 
A B C D 
@ A B C D 
? @ A B C D 

//Program -Method 1
#include <iostream>
using namespace std;
int main() {
    cout<<"Enter number of rows:";
    int n;
    cin>>n;
    int num=0;
  
for(int i=1;i<=n;i++){
  
    for(int j=1;j<=i;j++){
         char ch='D'-i+j;
        cout<<ch<<" "; 
    }
    cout<<"\n";
}
    return 0;
}

------------------------------------------------------------
Method - 2
#include <iostream>
using namespace std;
int main() {
    cout<<"Enter number of rows:";
    int n;
    cin>>n;
    int num=0;
  
for(int i=1;i<=n;i++){
  char ch='A'+n-i;
    for(int j=1;j<=i;j++){
         
        cout<<ch<<" ";
        ch=ch+1;
       
    }
    cout<<"\n";
}
    return 0;
}
__________________________________________________________________________________________
Output:
Enter number of rows:5
_ _ _ _ 1 
_ _ _ 1 2 1 
_ _ 1 2 3 2 1 
_ 1 2 3 4 3 2 1 
1 2 3 4 5 4 3 2 1 

Program:
#include <iostream>
using namespace std;
int main() {
    cout<<"Enter number of rows:";
    int n;
    cin>>n;
    int num=0;
  
for(int i=1;i<=n;i++){
    for(int j=n-i;j>=1;j--){
        cout<<"_"<<" ";
    }
     for(int k=1;k<=i;k++){
        cout<<k<<" ";
    }
    for(int m=1;m<i;m++){
        cout<<i-m<<" ";
        
    }
    cout<<"\n";
  
}
    return 0;
}
